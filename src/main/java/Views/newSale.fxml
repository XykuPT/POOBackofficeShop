    <Button mnemonicParsing="false" onAction="#back" prefHeight="27.0" prefWidth="65.0" text="Back" />
   <RadioButton fx:id="sale" layoutX="33.0" layoutY="57.0" mnemonicParsing="false" onAction="#radioChange" selected="true" text="Sale">
