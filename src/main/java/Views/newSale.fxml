         <ToggleGroup fx:id="saleType" />
      </toggleGroup>
   </RadioButton>
   <RadioButton fx:id="order" layoutX="165.0" layoutY="57.0" mnemonicParsing="false" onAction="#radioChange" text="Order" toggleGroup="$saleType" />
   <ComboBox fx:id="productsList" layoutX="41.0" layoutY="117.0" prefWidth="150.0" />
   <TextField layoutX="239.0" layoutY="117.0" />
   <Label layoutX="41.0" layoutY="100.0" text="Products" />
   <Label layoutX="239.0" layoutY="100.0" text="Quantity" />
   <TextField disable="true" editable="false" layoutX="421.0" layoutY="117.0" />
   <Label layoutX="421.0" layoutY="100.0" text="Total" />
   <TextField fx:id="addressInput" disable="true" layoutX="42.0" layoutY="200.0" prefHeight="25.0" prefWidth="349.0" />
   <Label layoutX="41.0" layoutY="183.0" text="Address" />
   <TextField fx:id="locationInput" disable="true" layoutX="42.0" layoutY="258.0" />
   <Label layoutX="43.0" layoutY="241.0" text="Location" />
   <Button layoutX="470.0" layoutY="258.0" mnemonicParsing="false" onAction="#SubmitNewSale" text="Submit" />
</AnchorPane>
